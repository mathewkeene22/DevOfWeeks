<div class="election" data-channel-subscribe="election" data-election-id="<%= @election.id %>">
  <div class="container">
    <div class="chart-container">
      <%= render partial: 'elections/chart' %>
    </div>
    <%= form_with model: @vote, id: 'vote_form' do |f| %>
      <%= f.text_area :election_id, as: :hidden, class: 'hide' %>
      <%= f.select :nominee_id, User.where.not(id: current_user.id).collect {|u| [ u.username, u.id ] } %>
      <%= f.text_area :message, size: "60x12" %>
      <%= f.submit "Create", class: "btn" %>
    <% end %>
  </div>

</div>
